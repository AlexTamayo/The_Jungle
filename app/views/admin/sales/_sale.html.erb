<tr>
  <td>
    <%= sale.name %>
  </td>

  <td>
    <%= sale.starts_on %>
  </td>

  <td>
    <%= sale.ends_on %>
  </td>

  <td>
    <% if sale.finished? %>
      <span class="custom-label custom-label-danger">Finished</span>
    <% elsif sale.upcoming? %>
      <span class="custom-label custom-label-warning">Upcoming</span>
    <% else %>
      <span class="custom-label custom-label-success">Active</span>
    <% end %>
  </td>

  <td>
    <%= sale.percent_off %>
  </td>

</tr>